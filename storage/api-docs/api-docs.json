                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Solde calculé avec succès"
                                        },
                                        "data": {
                                            "properties": {
                                                "solde": {
                                                    "description": "Solde formaté avec 2 décimales",
                                                    "type": "string",
                                                    "example": "27933.58"
                                                },
                                                "devise": {
                                                    "type": "string",
                                                    "example": "FCFA"
                                                },
                                                "numero_compte": {
                                                    "type": "string",
                                                    "example": "+221818930119"
                                                },
                                                "date_calculation": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2025-11-10T18:45:00Z"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Numéro de téléphone non trouvé dans le token"
                    },
                    "401": {
                        "description": "Non autorisé - token manquant ou rôle insuffisant"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
