                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Transaction récupérée"
                                        },
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "string",
                                                    "example": "cff03e8c-4020-429d-9181-92dcf970165b"
                                                },
                                                "type de transaction": {
                                                    "type": "string",
                                                    "example": "Transfert d'argent"
                                                },
                                                "Destinataire": {
                                                    "type": "string",
                                                    "example": "+221880686841"
                                                },
                                                "Expediteur": {
                                                    "type": "string",
                                                    "example": "+221818930119"
                                                },
                                                "montant": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 35000
                                                },
                                                "Date": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2023-03-15T00:00:00Z"
                                                },
                                                "Reference": {
                                                    "type": "string",
                                                    "example": "PP231115.2025.BA8F2"
                                                },
                                                "metadata": {
                                                    "properties": {
                                                        "derniereModification": {
                                                            "type": "string",
                                                            "format": "date-time",
                                                            "example": "2025-11-10T15:35:46Z"
                                                        },
                                                        "version": {
                                                            "type": "integer",
                                                            "example": 1
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Transaction non trouvée"
                    },
                    "401": {
                        "description": "Non autorisé - token manquant ou rôle insuffisant"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "sanctum": {
                "type": "http",
