{
    "openapi": "3.0.0",
    "info": {
        "title": "API OM Pay",
        "description": "Documentation interactive de l’API OM Pay construite avec Laravel et Sanctum",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Serveur dynamique (local ou production)"
        }
    ],
    "paths": {
        "/api/v1/auth/initiate-login": {
            "post": {
                "tags": [
                    "Authentification"
                ],
                "summary": "Initier la connexion avec OTP",
                "description": "Permet d'initier la connexion en envoyant un numéro de téléphone. Un code OTP sera généré et envoyé automatiquement par SMS.",
                "operationId": "15ecb5d89c53604a52eb97c89e426bf4",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "numeroTelephone"
                                ],
                                "properties": {
                                    "numeroTelephone": {
                                        "description": "Numéro de téléphone sénégalais valide",
                                        "type": "string",
                                        "example": "+221818930119"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OTP envoyé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "OTP envoyé avec succès"
                                        },
                                        "data": {
                                            "properties": {
                                                "temp_token": {
                                                    "type": "string",
                                                    "example": "eyJpdiI6Imtka1RhdzBtVzRObkNoYktrS3NGWWc9PSIs..."
                                                },
                                                "otp": {
                                                    "description": "Code OTP généré (pour développement/tests)",
                                                    "type": "string",
                                                    "example": "805826"
                                                },
                                                "message": {
                                                    "type": "string",
                                                    "example": "OTP envoyé avec succès"
                                                },
                                                "expires_in": {
                                                    "description": "Durée de validité en secondes",
                                                    "type": "integer",
                                                    "example": 300
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Numéro de téléphone non trouvé",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Numéro de téléphone non trouvé"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Compte inactif",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Votre compte n'est pas actif"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/verify-otp": {
            "post": {
                "tags": [
                    "Authentification"
                ],
                "summary": "Vérifier le code OTP",
                "description": "Permet de vérifier le code OTP reçu et d'obtenir un token d'authentification complet.",
                "operationId": "e3d832cac65082fe80b75bcefe64a3f5",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "token",
                                    "otp"
                                ],
                                "properties": {
                                    "token": {
                                        "description": "Token temporaire reçu lors de l'initiation",
                                        "type": "string",
                                        "example": "eyJpdiI6Imtka1RhdzBtVzRObkNoYktrS3NGWWc9PSIs..."
                                    },
                                    "otp": {
                                        "description": "Code OTP de 6 chiffres",
                                        "type": "string",
                                        "example": "805826"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Authentification réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Authentification réussie"
                                        },
                                        "data": {
                                            "properties": {
                                                "access_token": {
                                                    "type": "string",
                                                    "example": "21|17vf3MfQS8c64IZvf4j5szpBMkPQF7uSLYoa70jkc33515bb"
                                                },
                                                "token_type": {
                                                    "type": "string",
                                                    "example": "Bearer"
                                                },
                                                "user": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "string",
                                                            "example": "d4f1ab82-a86e-4975-aa66-5ef804bfa246"
                                                        },
                                                        "nom": {
                                                            "type": "string",
                                                            "example": "Ondricka"
                                                        },
                                                        "prenom": {
                                                            "type": "string",
                                                            "example": "Tanya"
                                                        },
                                                        "role": {
                                                            "type": "string",
                                                            "example": "client"
                                                        }
                                                    },
                                                    "type": "object"
                                                },
                                                "compte_id": {
                                                    "type": "string",
                                                    "example": "228e7d7a-937b-40dd-88d7-ff8fa4d334f4"
                                                },
                                                "numero_telephone": {
                                                    "type": "string",
                                                    "example": "+221818930119"
                                                },
                                                "role": {
                                                    "type": "string",
                                                    "example": "client"
                                                },
                                                "permissions": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "OTP invalide ou expiré",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Code OTP invalide ou expiré"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/login": {
            "post": {
                "tags": [
                    "Authentification"
                ],
                "summary": "Connexion traditionnelle (numéro + PIN)",
                "description": "Permet à un utilisateur de se connecter avec son numéro de téléphone et son code PIN. Méthode maintenue pour compatibilité.",
                "operationId": "2ccdca282a3dfd24e3585a7fea327565",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "numeroTelephone",
                                    "codePing"
                                ],
                                "properties": {
                                    "numeroTelephone": {
                                        "description": "Numéro de téléphone sénégalais valide",
                                        "type": "string",
                                        "example": "+221818930119"
                                    },
                                    "codePing": {
                                        "description": "Code PIN du compte",
                                        "type": "string",
                                        "example": "1234"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Connexion réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Connexion réussie"
                                        },
                                        "data": {
                                            "properties": {
                                                "access_token": {
                                                    "type": "string",
                                                    "example": "1|xxxxxxxxxx"
                                                },
                                                "token_type": {
                                                    "type": "string",
                                                    "example": "Bearer"
                                                },
                                                "role": {
                                                    "type": "string",
                                                    "example": "client"
                                                },
                                                "compte_id": {
                                                    "type": "string",
                                                    "example": "228e7d7a-937b-40dd-88d7-ff8fa4d334f4"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Identifiants invalides",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Numéro de téléphone ou code PIN invalide"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/comptes": {
            "get": {
                "tags": [
                    "Comptes"
                ],
                "summary": "Lister les comptes selon le rôle",
                "description": "Retourne le compte du client connecté ou tous les comptes si c’est un admin.",
                "operationId": "0f411c0d5b7b7411686d68fbb813d286",
                "responses": {
                    "200": {
                        "description": "Comptes récupérés",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "comptes recuperer"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "string",
                                                        "example": "10e5ea70-d168-4d14-b6ef-eef90221e630"
                                                    },
                                                    "numeroCompte": {
                                                        "type": "string",
                                                        "example": "T3YK5AED7K"
                                                    },
                                                    "type": {
                                                        "type": "string",
                                                        "example": "marchand"
                                                    },
                                                    "statut": {
                                                        "type": "string",
                                                        "example": "actif"
                                                    },
                                                    "dateCreation": {
                                                        "type": "string",
                                                        "format": "date-time"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Non autorisé"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/v1/transactions": {
            "get": {
                "tags": [
                    "Transactions"
                ],
                "summary": "Récupérer toutes les transactions de l'utilisateur",
                "description": "Retourne toutes les transactions où l'utilisateur connecté est soit l'expéditeur soit le destinataire.",
                "operationId": "9d6c6414f4a09547a9eaeafcfeb6de11",
                "responses": {
                    "200": {
                        "description": "Transactions récupérées avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Transactions récupérées"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "string",
                                                        "example": "cff03e8c-4020-429d-9181-92dcf970165b"
                                                    },
                                                    "type de transfere": {
                                                        "type": "string",
                                                        "example": "Transfert d'argent"
                                                    },
                                                    "Numero": {
                                                        "description": "Numéro de téléphone de l'autre partie (expéditeur si l'utilisateur est destinataire, destinataire si l'utilisateur est expéditeur)",
                                                        "type": "string",
                                                        "example": "+221818930119"
                                                    },
                                                    "montant": {
                                                        "type": "number",
                                                        "format": "float",
                                                        "example": 35000
                                                    },
                                                    "dateCreation": {
                                                        "type": "string",
                                                        "format": "date-time",
                                                        "example": "2023-03-15T00:00:00Z"
                                                    },
                                                    "metadata": {
                                                        "properties": {
                                                            "derniereModification": {
                                                                "type": "string",
                                                                "format": "date-time",
                                                                "example": "2025-11-10T15:35:46Z"
                                                            },
                                                            "version": {
                                                                "type": "integer",
                                                                "example": 1
                                                            }
                                                        },
                                                        "type": "object"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Numéro de téléphone non trouvé dans le token"
                    },
                    "401": {
                        "description": "Non autorisé - token manquant ou rôle insuffisant"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Transactions"
                ],
                "summary": "Créer une nouvelle transaction",
                "description": "Crée une nouvelle transaction avec les informations fournies.",
                "operationId": "7688f7a930f17e6fc17f61e55aedc1cf",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "numero du destinataire",
                                    "montant",
                                    "type_transaction"
                                ],
                                "properties": {
                                    "numero du destinataire": {
                                        "description": "Numéro du destinataire au format sénégalais (+221XXXXXXXXX, doit exister en base et être différent de l'expéditeur)",
                                        "type": "string",
                                        "example": "+221880686841"
                                    },
                                    "montant": {
                                        "description": "Montant de la transaction (doit être positif et supérieur à 0.01)",
                                        "type": "number",
                                        "format": "float",
                                        "example": 35000
                                    },
                                    "type_transaction": {
                                        "description": "Type de transaction (obligatoire)",
                                        "type": "string",
                                        "enum": [
                                            "transfert",
                                            "Transfert d'argent"
                                        ],
                                        "example": "Transfert d'argent"
                                    },
                                    "date": {
                                        "description": "Date de la transaction (optionnel)",
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2023-03-15T00:00:00Z"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Transaction créée avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Transaction créée avec succès"
                                        },
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "string",
                                                    "example": "cff03e8c-4020-429d-9181-92dcf970165b"
                                                },
                                                "type de transaction": {
                                                    "type": "string",
                                                    "example": "Transfert d'argent"
                                                },
                                                "Destinataire": {
                                                    "type": "string",
                                                    "example": "+221880686841"
                                                },
                                                "Expediteur": {
                                                    "type": "string",
                                                    "example": "+221818930119"
                                                },
                                                "montant": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 35000
                                                },
                                                "Date": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2023-03-15T00:00:00Z"
                                                },
                                                "Reference": {
                                                    "type": "string",
                                                    "example": "PP231115.2025.BA8F2"
                                                },
                                                "metadata": {
                                                    "properties": {
                                                        "derniereModification": {
                                                            "type": "string",
                                                            "format": "date-time",
                                                            "example": "2025-11-10T15:35:46Z"
                                                        },
                                                        "version": {
                                                            "type": "integer",
                                                            "example": 1
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Données invalides - compte destinataire inexistant, expéditeur = destinataire, montant invalide, etc."
                    },
                    "401": {
                        "description": "Non autorisé - token manquant ou rôle insuffisant"
                    },
                    "422": {
                        "description": "Erreur de validation"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/v1/transactions/solde": {
            "get": {
                "tags": [
                    "Transactions"
                ],
                "summary": "Récupérer le solde du compte",
                "description": "Calcule et retourne le solde du compte basé sur les transactions (dépôts = +montant, retraits = -montant).",
